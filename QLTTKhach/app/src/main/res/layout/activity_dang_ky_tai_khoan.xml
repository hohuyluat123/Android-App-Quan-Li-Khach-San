<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangKyTaiKhoan"
    android:background="@drawable/hinhdangky"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4640C4FF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TenTkDk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HỌ TÊN" />

        <EditText
            android:id="@+id/editTextTenTKDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5440C4FF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MatKhauDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MẬT KHẨU MỚI" />

        <EditText
            android:id="@+id/editTextMatKhauDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4340C4FF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ReMatKhauDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NHẬP LẠI MẬT KHẢU MỚI" />

        <EditText
            android:id="@+id/editTextReMatKhauDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonDangKy"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#5C64FFDA"
        android:backgroundTint="#64FFDA"
        android:text="ĐĂNG KÝ" />
</LinearLayout>