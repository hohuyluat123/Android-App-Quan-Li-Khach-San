<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemKhachMoi">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#76DA1E"
        android:backgroundTint="#9CFAE3"
        android:text="THÊM KHÁCH MỚI"
        android:textAlignment="center"
        android:textColor="#FF5252"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="382dp"
        android:background="#C6ECD9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NhanVienLapPhieu"
                    android:layout_width="185dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nhân viên: "
                    android:textColor="#536DFE"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/textNhanVienLapPhieu"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nhập ID nhân viên"
                    android:inputType="text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextNguoiDaiDien"
                    android:layout_width="91dp"
                    android:layout_height="59dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Đại Diện: "
                    android:textColor="#536DFE"
                    android:textStyle="bold" />


                <Spinner
                    android:id="@+id/spinnerNgDaiDien"
                    android:layout_width="178dp"
                    android:layout_height="59dp"
                    android:background="#B5EAD0"
                    android:backgroundTint="#AFF6D3"
                    android:ems="10"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/textNgDaiDien"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:inputType="text"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextQuocTich"
                    android:layout_width="185dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Quốc tịch: "
                    android:textColor="#536DFE"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/textQuocTich"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nhập vào Quốc tịch của khách hàng"
                    android:inputType="text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPhong"
                    android:layout_width="97dp"
                    android:layout_height="57dp"
                    android:text="Phong:"
                    android:textColor="#536DFE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/textSpinerPhong"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#B5EAD0"
                    android:backgroundTint="#AFF6D3"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Chọn phòng" />
                <TextView
                    android:id="@+id/textnhap"
                    android:layout_width="185dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#536DFE"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textGioiTinh"
                    android:layout_width="95dp"
                    android:layout_height="56dp"
                    android:text="Giới tính:"
                    android:textColor="#536DFE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioNu"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioNam"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:textStyle="bold" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextDiaChi"
                    android:layout_width="185dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Địa chỉ: "
                    android:textColor="#536DFE"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/textDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nhập vào Địa chỉ của khách hàng"
                    android:inputType="text"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextName"
                    android:layout_width="185dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Họ và tên: "
                    android:textColor="#536DFE"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nhập vào họ tên khách hàng"
                    android:inputType="text"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextCMND"
                    android:layout_width="185dp"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="CMND: "
                    android:textColor="#536DFE"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/textCMND"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nhập vào CMND của Khách"
                    android:inputType="text"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5252"
        android:backgroundTint="#69F0AE"
        android:text="Thêm vào Hồ sơ" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hotel"/>


</LinearLayout>
