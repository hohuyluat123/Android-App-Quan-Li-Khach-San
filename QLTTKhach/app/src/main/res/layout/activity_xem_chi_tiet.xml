<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    android:orientation="vertical"
    tools:context=".XemChiTiet">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6BEEFF41"
        android:text="Chi Tiết Thuê "
        android:textAlignment="center"
        android:textColor="#FF5252"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5218FFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextMaKhach"
            android:layout_width="124dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Mã khách: "
            android:textColor="#101117"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinMaKhach"
            android:layout_width="235dp"
            android:layout_height="58dp"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textmakhach"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#8F40C4FF"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5618FFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextMaphong"
            android:layout_width="123dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Mã phòng: "
            android:textColor="#101117"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/textmaphong"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#8F40C4FF"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#5918FFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editTextngaythue"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Ngày thuê: "
                android:textColor="#101117"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textngaythue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonngthueCT"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Chọn" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B740C4FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <DatePicker
                    android:id="@+id/datepickerthueCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:datePickerMode="calendar" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="#5E18FFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editTextngaytra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Ngày trả: "
                android:textColor="#101117"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textngaytra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonngtraCT"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Chọn" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BE69BAEF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <DatePicker
                    android:id="@+id/datepickertraCT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:datePickerMode="calendar" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/DateCT"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="So Ngay" />

        <EditText
            android:id="@+id/songayCT"
            android:layout_width="290dp"
            android:layout_height="42dp"
            android:background="#8F40C4FF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5918FFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTexttongtien"
            android:layout_width="122dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Tổng tiền: "
            android:textColor="#101117"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/texttongtien"
            android:layout_width="287dp"
            android:layout_height="58dp"
            android:background="#8F40C4FF"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#6018FFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextDatra"
            android:layout_width="120dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Đã trả: "
            android:textColor="#101117"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/textDaTra"
            android:layout_width="304dp"
            android:layout_height="58dp"
            android:background="#8F40C4FF"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5918FFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextConLai"
            android:layout_width="120dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Còn Lại: "
            android:textColor="#101117"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/textConLai"
            android:layout_width="291dp"
            android:layout_height="58dp"
            android:background="#8F40C4FF"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5918FFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextNhanVienNhan"
            android:layout_width="120dp"
            android:layout_height="59dp"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nhân viên nhận: "
            android:textColor="#101117"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/textNhanVienNhan"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#8F40C4FF"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#A669F0AE"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/editTextSoTien"
            android:layout_width="160dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Số tiền Nhân từ khách: "
            android:textColor="#101117"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textSoTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone"
            android:textStyle="bold" />

        <TextView
            android:layout_width="77dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="VNĐ "
            android:textColor="#101117"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/XacNhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác Nhận" />

</LinearLayout>