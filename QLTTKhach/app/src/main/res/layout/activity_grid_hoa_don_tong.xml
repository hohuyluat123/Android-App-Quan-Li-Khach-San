<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grid_HoaDonTong"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:text="MaKH:" />

        <EditText
            android:id="@+id/textmaKhachGridHDT"
            android:layout_width="73dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:text="MaPH:" />

        <EditText
            android:id="@+id/textmaPhongGridHDT"
            android:layout_width="68dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:text="MaDV:" />

        <EditText
            android:id="@+id/textmaDvGridHDT"
            android:layout_width="92dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MaHD:" />

        <TextView
            android:id="@+id/textMaHDGridHDT"
            android:layout_width="81dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="SL: " />

        <EditText
            android:id="@+id/textSlGridHDT"
            android:layout_width="52dp"
            android:layout_height="match_parent" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NgaySD:" />

        <EditText
            android:id="@+id/textNgSDGridHDT"
            android:layout_width="131dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:text="TTien: " />

        <EditText
            android:id="@+id/textTTienGridHDT"
            android:layout_width="129dp"
            android:layout_height="match_parent"
             />
        <TextView

            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:text="ConNo:" />

        <EditText
            android:id="@+id/textConNoGridHDT"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btEditGridHDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT" />

    </LinearLayout>
</LinearLayout>